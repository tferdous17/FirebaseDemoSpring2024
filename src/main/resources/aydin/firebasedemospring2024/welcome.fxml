<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="VBox" stylesheets="@Styles/welcome.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemospring2024.WelcomeController">
   <children>
      <Label styleClass="Label" text="Welcome!" underline="true">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font></Label>
      <TextField fx:id="registerNameTxt" promptText="Name" styleClass="TextField" />
      <TextField fx:id="registerEmailTxt" promptText="Email" styleClass="TextField" />
      <TextField fx:id="registerPassTxt" promptText="Password" styleClass="TextField" />
      <TextField fx:id="registerPhoneTxt" promptText="Phone" styleClass="TextField" />
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" styleClass="Button" stylesheets="" text="Register">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <TextField fx:id="signInEmailTxt" promptText="Email" styleClass="TextField" />
      <TextField fx:id="signInPassTxt" promptText="Password" styleClass="TextField" />
      <Button fx:id="signInBtn" mnemonicParsing="false" onAction="#signIn" styleClass="Button" text="Sign In">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="secondaryButton" styleClass="Button" text="Switch to Primary View">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
